<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Create Server'
            background_color: (0.1,0.5,0.2,53)
            on_press: root.manager.current = 'createservermenu'
        Button:
            text: 'Search for Server'
            background_color: (0.1,0.3,0.7,53)
            #on_press: root.manager.current = 'search'
        Button:
            text: 'Settings'
            background_color: (0.4,0.2,0.6,53)
            on_press: root.manager.current = 'settingsmenu'
        Button:
            text: 'Statistics'
            background_color: (0.4,0.8,0.6,53)
            on_press: root.manager.current = 'statisticsmenu'
        Button:
            text: 'About'
            background_color: (0.1,0.8,0.5,53)
            on_press: root.manager.current = 'aboutmenu'
        Button:
            text: 'Quit'
            background_color: (1,0.0,0.0,53)
            size_hint: (1, 0.5)
            on_press: exit()
