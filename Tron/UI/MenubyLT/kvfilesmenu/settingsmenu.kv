# Arena Type
# Difficulty
# Back to Main Menu
# Name Input
<SettingsMenu>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Label:
            id: displaymenunameLabel
            text: 'Settings Menu'
            size_hint: (1, 0.1)
            color: 1, 0, 0, 1
        Button:
            id: arenatypeButton
            text: 'Change Arena Type'
            background_color: (0.1,0.3,0.7,1)
            size_hint: (1, 2.5)
            #on_release: root.changearenatype()
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,2.5)
            Label:
                id: difficultytextLabel
                text: 'Change Difficulty'
                size_hint: (2, 1)
                color: 1, 0, 0, 1
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.25,1)
                Button:
                    id: difficulty1Button
                    text: '1'
                    background_color: (0.1,0.3,0.7,1)
                    #size_hint: (0.25, 2.5)
                    on_release: root.changedifficulty("1")
                Button:
                    id: difficulty2Button
                    text: '2'
                    background_color: (0.1,0.3,0.7,1)
                    #size_hint: (0.25, 2.5)
                    on_release: root.changedifficulty("2")
            Label:
                id: difficultyendLabel
                text: ''
                size_hint: (0.5, 1)
                color: 1, 0, 0, 2.5
        Button:
            id: backtomenuButton
            text: 'Back to Main Menu'
            background_color: (1,0,0,1)
            size_hint: (1, 0.5)
            on_release: root.manager.current = 'mainmenu'