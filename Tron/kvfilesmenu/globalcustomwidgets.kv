
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<HeaderLabel@Label+BackgroundColor>
    size_hint: (.98, .08)
    background_color: (.0,.6,.2,1)
    pos_hint: {"x": 0, "y": 0}

<ColoredLabel@Label+BackgroundColor>

<BackToMenuButton>:
    Button:
        id: backtomenuButton
        text: 'Back to Mainmenu'
        size_hint: (.98,.08)
        pos_hint: {"x": 0, "y": 0}
        background_color: (1, 0, 0,1)
        #pos_hint: {"bottom":1}
        on_release: root.changeScreen()

<ListLabel@Label>
