<SearchForServerMenu>:

    id: searchforservermenuId
    inputIp: ipTextInput
    inputPort: portTextInput

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Label:
            id: menunameLabel
            text: 'Search For Server Menu'
            size_hint: 1, .3
            color: 0, 0, 0, 1

        Label:
            id: statusenemiesLabel
            text: 'Other players will grab a coffee. Wanna join?'
            color: 0, 0, 0, 1

        Label:
            id: playersonlineLabel
            text: 'Noone wants to play with you. Even computer says NO'
            color: 0, 0, 0, 1

        BoxLayout:
            orientation: 'horizontal'

            Label:
                id: askforipLabel
                text: "Please Enter the IP from the Server"

            TextInput:
                id: ipTextInput
                hint_text: '131.159.200.137'
                on_text: root.updateconnecttoserverButton(ipTextInput.text, portTextInput.text)

            TextInput:
                id: portTextInput
                hint_text: '9877'
                on_text: root.updateconnecttoserverButton(ipTextInput.text, portTextInput.text)

        Button:
            id: connecttoserverButton
            text: 'Connect to the Server and start Game (Not implemented yet)'
            on_release:
                root.manager.current = 'gamestartmenu'
            #    root.getserverOnline()
                root.connecttoServer(ipTextInput.text, portTextInput.text)

        Button:
            id: backtomenuButton
            text: 'Return to the Main Menu (Not implemented yet)'
            on_release: root.manager.current = 'mainmenu'

        BoxLayout:
            Button:
                text: 'Game Over Menu'
                on_release: root.manager.current = 'gameovermenu'
            Button:
                text: 'Connection Lost Menu'
                on_release: root.manager.current = 'connectionlostmenu'
            Button:
                text: 'Search For Server Menu'
                on_release: root.manager.current = 'searchforservermenu'
            Button:
                text: 'Create Server Menu'
                on_release: root.manager.current = 'createservermenu'
            Button:
                text: 'Pause Menu'
                on_release: root.manager.current = 'pausemenu'
