<SearchForLobbiesMenuFloat>:
    on_enter:
        root.getPlayerdata("")
        root.getavailableLobbies()

    HeaderLabel:
        text: 'Search for Lobbies Menu Float Version'
        pos_hint: {"x": .01, "y": .91}

    ColoredLabel:
        id: explainmenuLabel
        size_hint: ( .98, .1)
        pos_hint: {'x': .01, 'y': .8}
        background_color: (.4,.4,.2,1)
        text: 'Here you can Enter a Lobby'

    BoxLayout:
        orientation: "horizontal"
        size_hint: (.98, .5)
        pos_hint: {'x': .01, 'y': .185}
        spacing: 1
        padding: 1

        BoxLayout:
            orientation: "vertical"
            size_hint: (.9, 1)

            Label:
                id: lobby1Label
                #size_hint: ( .98, .095)
                #pos_hint: {'x': .01, 'y': .695}
                text: 'xxxx'
            Label:
                id: lobby2Label
                #size_hint: ( .98, .095)
                #pos_hint: {'x': .01, 'y': .59}
                text: 'xxxx'
            Label:
                id: lobby3Label
                #size_hint: ( .98, .095)
                #pos_hint: {'x': .01, 'y': .485}
                text: 'xxxx'
            Label:
                id: lobby4Label
                #size_hint: ( .98, .095)
                #pos_hint: {'x': .01, 'y': .38}
                text: 'xxxx'
            Label:
                id: lobby5Label
                #size_hint: ( .98, .095)
                #pos_hint: {'x': .01, 'y': .275}
                text: 'xxxx'
        
        BoxLayout:
            orientation: "vertical"
            size_hint: (.1, 1)

            CheckBox:
                id: lobby1Checkbox
                group: "LobbyCheckbox"
                color: (1,0,0,1)
                on_active:
                    root.updatechosenLobby(1)

            CheckBox:
                id: lobby2Checkbox
                group: "LobbyCheckbox"
                color: (1,0,0,1)
                on_active:
                    root.updatechosenLobby(2)

            CheckBox:
                id: lobby3Checkbox
                group: "LobbyCheckbox"
                color: (1,0,0,1)
                on_active:
                    root.updatechosenLobby(3)

            CheckBox:
                id: lobby4Checkbox
                group: "LobbyCheckbox"
                color: (1,0,0,1)
                on_active:
                    root.updatechosenLobby(4)

            CheckBox:
                id: lobby5Checkbox
                group: "LobbyCheckbox"
                color: (1,0,0,1)
                on_active:
                    root.updatechosenLobby(5)


    Button:
        id: enterlobbyButton
        size_hint: (.98, .08)
        pos_hint: {"x": .01, "y": .1}
        background_color: (0.1,0.3,0.7,1)
        text: 'Enter Lobby'
        on_release:
            root.enterLobby()
            root.manager.current = 'lobbymenufloat'

    BackToMenuButton:
        pos_hint: {"x": .01, "y": .01}

