# Color Input (Tupel)
# Back to Main Menu
# Name Input
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<ColoredLabel@Label+BackgroundColor>


<SettingsMenu>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Label:
            id: displaymenunameLabel
            text: 'Settings Menu'
            size_hint: (1, 0.1)
            color: 0, 0, 0, 1
        Label:
            size_hint: (1,1)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,1)
            Label:
                id: changenameLabel
                text: 'Change Player Name:'
                size_hint: (0.5, 1)
                color: 0, 0, 0, 1
            TextInput:
                id: nameTextInput
                hint_text: 'Player 1'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,1)
            Label:
                id: changecolorLabel
                text: 'Change Color:'
                size_hint: (0.3, 1)
                color: 0, 0, 0, 1
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.5, 1)
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        id: redcolorLabel
                        text: 'Red:'
                        size_hint: (0.4, 1)
                        color: 0, 0, 0, 1
                    Slider:
                        id: redcolorSlider
                        min: 0
                        max: 1
                        step: 0.25
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        id: greencolorLabel
                        text: 'Green:'
                        size_hint: (0.4, 1)
                        color: 0, 0, 0, 1
                    Slider:
                        id: greencolorSlider
                        min: 0
                        max: 1
                        step: 0.25
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        id: bluecolorLabel
                        text: 'Blue:'
                        size_hint: (0.4, 1)
                        color: 0, 0, 0, 1
                    Slider:
                        id: bluecolorSlider
                        min: 0
                        max: 1
                        step: 0.25
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.3, 1)
                Label:
                    id: changecolorLabel
                    text: 'Current Color:'
                    size_hint: (1, 1)
                    color: 0, 0, 0, 1
                ColoredLabel:
                    id: colordisplayLabel
                    text: ''
                    background_color: (redcolorSlider.value,greencolorSlider.value,bluecolorSlider.value,1)
                    size_hint: (1, 1.5)
        Label:
            size_hint: (1,2)

        Button:
            id: backtomenuButton
            text: 'Back to Main Menu (Save)'
            background_color: (1,0,0,1)
            size_hint: (1, 0.5)
            on_press: root.savechanges(nameTextInput.text, (redcolorSlider.value, greencolorSlider.value, bluecolorSlider.value))
            on_release: root.manager.current = 'mainmenufloat'
