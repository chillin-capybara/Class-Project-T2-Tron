# Color Input (Tupel)
# Back to Main Menu
# Name Input
<SettingsMenu>:
    on_enter: root.loadplayerdata()
    HeaderLabel:
        text: 'Settings Menu'
        pos_hint: {"x": .01, "y": .94}
    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {"x": .01, "y": .76}
        size_hint: ( .98, .16)
        Label:
            id: changenameLabel
            text: 'Change Player Name:'
            size_hint: (0.5, 1)
        TextInput:
            id: nameTextInput
            hint_text: 'Player_1'
            on_text:
                root.validateInput(self.text)

    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {"x": .01, "y": .51}
        size_hint: ( .98, .16)
        Label:
            id: changecolorLabel
            text: 'Change Color:'
            size_hint: (0.3, 1)
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.5, 1)
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id: redcolorLabel
                    text: 'Red:'
                    size_hint: (0.4, 1)
                Slider:
                    id: redcolorSlider
                    min: 0
                    max: 255
                    step: 1
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id: greencolorLabel
                    text: 'Green:'
                    size_hint: (0.4, 1)
                Slider:
                    id: greencolorSlider
                    min: 0
                    max: 255
                    step: 1
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id: bluecolorLabel
                    text: 'Blue:'
                    size_hint: (0.4, 1)
                Slider:
                    id: bluecolorSlider
                    min: 0
                    max: 255
                    step: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.3, 1)
            Label:
                id: changecolorLabel
                text: 'Current Color:'
                size_hint: (1, 1)
            ColoredLabel:
                id: colordisplayLabel
                text: ''
                background_color: (redcolorSlider.value/255,greencolorSlider.value/255,bluecolorSlider.value/255,1)
                size_hint: (1, 1.5)

    # BackToMenuButton:
    #     pos_hint: {"x": .01, "y": .01}
    #     on_press: root.savechanges(nameTextInput.text, (redcolorSlider.value, greencolorSlider.value, bluecolorSlider.value))

    Button:
        id: backtomenuButton
        text: 'Back to Main Menu (Save)'
        background_color: (1,0,0,1)
        pos_hint: {"x": .01, "y": .01}
        size_hint: ( .98, .08)
        on_press: root.savechanges(nameTextInput.text, (redcolorSlider.value, greencolorSlider.value, bluecolorSlider.value))
        on_release: root.manager.current = 'mainmenu'
