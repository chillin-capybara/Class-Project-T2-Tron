# Arena Type
# Difficulty
# Back to Main Menu
# Name Input
<SettingsMenu>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Label:
            id: displaymenunameLabel
            text: 'Settings Menu'
            size_hint: (1, 0.1)
            color: 1, 0, 0, 1
        Label:
            size_hint: (1,1)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,1)
            Label:
                id: changenameLabel
                text: 'Change Player Name:'
                size_hint: (0.5, 1)
                color: 1, 0, 0, 1
            TextInput:
                id: nameTextInput
                hint_text: 'Player 1'
                #on_text: root.updatenameinput(nameTextInput.text)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,1)
            Label:
                id: changecolorLabel
                text: 'Change Color:' +  str(int(colorSlider.value))
                size_hint: (0.5, 1)
                color: 1, 0, 0, 1
            Slider:
                id: colorSlider
                min: 1
                max: 10
                step: 1
        Label:
            size_hint: (1,2)
        Button:
            id: backtomenuButton
            text: 'Back to Main Menu (Save)'
            background_color: (1,0,0,1)
            size_hint: (1, 0.5)
            on_press: root.savechanges(nameTextInput.text, colorSlider.value)
            on_release: root.manager.current = 'mainmenu'
