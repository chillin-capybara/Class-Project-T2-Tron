# Create Server
# Search for Server
# Settings
# Statistics
# About
# Quit

<MainMenuFloat>:
    on_pre_enter: root.loadplayerdata()
    HeaderLabel:
        text: 'Main Menu'
        pos_hint: {"x": .005, "y": .945}
        size_hint: ( .99, .05)
    Button:
        id: createserverButton
        text: 'Create Server'
        background_color: (0.1,0.3,0.7,1)
        pos_hint: {"x": .005, "y": .775}
        size_hint: ( .99, .165)
        on_release: root.manager.current = 'createservermenufloat'
    Button:
        id: searchforlobbiesmenuButton
        text: 'Search for Lobbies'
        background_color: (0.1,0.3,0.7,1)
        pos_hint: {"x": .005, "y": .605}
        size_hint: ( .99, .165)
        on_release: root.manager.current = 'searchforlobbiesmenufloat'
    Button:
        id: settingsButton
        text: 'Settings'
        background_color: (0.1,0.3,0.7,1)
        pos_hint: {"x": .005, "y": .435}
        size_hint: ( .99, .165)
        on_release: root.manager.current = 'settingsmenu'
    Button:
        id: statisticsButton
        text: 'Statistics'
        background_color: (0.1,0.3,0.7,1)
        pos_hint: {"x": .005, "y": .265}
        size_hint: ( .99, .165)
        on_release: root.manager.current = 'statisticsmenu'
    Button:
        id: aboutButton
        text: 'About'
        background_color: (0.1,0.3,0.7,1)
        pos_hint: {"x": .005, "y": .095}
        size_hint: ( .99, .165)
        on_release: root.manager.current = 'aboutmenu'
    Button:
        id: quitButton
        text: 'Quit'
        background_color: (1,0,0,1)
        pos_hint: {"x": .005, "y": .005}
        size_hint: ( .99, .085)
        on_release:
            root.quit()