<CreateServerMenu>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Label:
            id: menunameLabel
            text: 'Create Server Menu'
            size_hint: 1, .3
            color: 0, 1, 0, 1

        Label:
            id: connectedplayersLabel
            text: 'Noone wants to play with you. Even computer says NO'
            color: 0, 0, 0, 1

        BoxLayout:
            orientation: 'horizontal'

            Label:
                id: arenadifficultyLabel
                text: 'Please choose Arenatype here'
                size_hint_x: .50
        
            CheckBox:
                id: arenadifficultyoneCheckbox
                group: "arenadifficultyCheckbox"
                size_hint_x: .08
                on_active:
                    root.updateArenatype(1)

            Label:
                id: arenadifficultyoneheckboxLabel
                text: 'Arenatype 1'
                size_hint_x: .17
            
            CheckBox:
                id: arenadifficultytwoCheckbox
                group: "arenadifficultyCheckbox"
                size_hint_x: .08
                on_active:
                    root.updateArenatype(2)
            
            Label:
                id: arenadifficultytwocheckboxLabel
                text: 'Arenatype 2'
                size_hint_x: .17

        BoxLayout:
            orientation: 'horizontal'

            Label:
                id: difficultyLabel
                text: 'Please choose the diffculty'
                size_hint_x: .50
        
            CheckBox:
                id: difficultyoneCheckbox
                group: "difficultyCheckbox"
                size_hint_x: .08
                on_active:
                    root.updateDifficulty(1)
            

            Label:
                id: difficultyoneheckboxLabel
                text: 'Diffculty 1'
                size_hint_x: .17
            
            CheckBox:
                id: difficultytwoCheckbox
                group: "difficultyCheckbox"
                size_hint_x: .08
                on_active:
                    root.updateDifficulty(2)
            
            Label:
                id: difficultytwocheckboxLabel
                text: 'Diffculty 2'
                size_hint_x: .17

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Number of Players ' + str(int(numberplayersSlider.value))

            Slider:
                id: numberplayersSlider
                min: 2
                max: 10
                step: 1


        Button:
            id: serverstartButton
            text: 'Start the Server(Not implemented yet)'
            on_release:
                root.createServer(int(numberplayersSlider.value))
                root.startGame
                root.manager.current = ('gamestartmenu')

        Button:
            id: backtomenuButton
            text: 'Return to the Main Menu (Not implemented yet)'
            on_release: root.manager.current = 'mainmenu'
