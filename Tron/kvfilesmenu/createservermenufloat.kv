<CreateServerMenuFloat>:

    HeaderLabel:
        text: 'Create Server Menu'
        pos_hint: {"x": .01, "y": .94}

    ColoredLabel:
        id: explainmenuLabel
        size_hint: ( .98, .08)
        pos_hint: {'x': .01, 'y': .85}
        background_color: (.1,.3,.7,1)
        text: 'Here you can create a Server'

    BoxLayout:
        orientation: 'vertical'
        size_hint: ( .98, .16)
        pos_hint: {'x': .01, 'y': .65}


        Label:
            text: 'Number of Lobbies ' + str(int(numberlobbiesSlider.value))

        Slider:
            id: numberlobbiesSlider
            min: 1
            max: 100
            step: 1
    
    BoxLayout:
        orientation: "horizontal"
        size_hint: ( .98, .16)
        pos_hint: {'x': .01, 'y': .48}

        Label:
            text: 'Server status:'
        Label:
            text: 'running' if statusserverSwitch.active else 'not running'
        Switch:
            id: statusserverSwitch
            on_active:
                root.statusServer(self.active, numberlobbiesSlider.value, widthSlider.value, heightSlider.value)

    BoxLayout:
        orientation: 'vertical'
        size_hint: ( .98, .29)
        pos_hint: {'x': .01, 'y': .19}

        Label:
            text: 'Fieldsize: Width ' + str(int(widthSlider.value))

        Slider:
            id: widthSlider
            min: 10
            max: 100
            step: 5

        Label:
            text: 'Fieldsize: Height ' + str(int(heightSlider.value))

        Slider:
            id: heightSlider
            min: 10
            max: 100
            step: 5

    Button:
        id: searchforlobbiesButton
        size_hint: (.98, .08)
        background_color: (0.1,0.3,0.7,1)
        pos_hint: {'x': .01, 'y': .1}
        text: 'Search for lobbies'
        on_release:
            root.manager.current = 'searchforlobbiesmenudynamic'

    BackToMenuButton:
        pos_hint: {"x": .01, "y": .01}
