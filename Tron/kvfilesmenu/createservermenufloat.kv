<CreateServerMenuFloat>:

    HeaderLabel:
        text: 'Search for Server Menu Float Version'
        pos_hint: {"x": .01, "y": .91}

    ColoredLabel:
        id: explainmenuLabel
        size_hint: ( .98, .08)
        pos_hint: {'x': .01, 'y': .82}
        background_color: (.4,.4,.2,1)
        text: 'Here you can create a Server'

    BoxLayout:
        orientation: 'vertical'
        size_hint: ( .98, .16)
        pos_hint: {'x': .01, 'y': .65}


        Label:
            text: 'Number of Lobbies ' + str(int(numberlobbiesSlider.value))

        Slider:
            id: numberlobbiesSlider
            min: 1
            max: 10
            step: 1
    
    BoxLayout:
        orientation: "horizontal"
        size_hint: ( .98, .16)
        pos_hint: {'x': .01, 'y': .48}

        Label:
            text: 'Server status:'
        Label:
            text: 'running' if statusserverSwitch.active else 'not running'
        Switch:
            id: statusserverSwitch
            on_active:
                root.statusServer(self.active, numberlobbiesSlider.value)

    BackToMenuButton:
        pos_hint: {"x": .01, "y": .01}

