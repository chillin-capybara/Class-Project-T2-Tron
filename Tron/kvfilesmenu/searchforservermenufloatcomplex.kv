<IPTextInput>:
    foreground_color: (0,1,0,1) if root.validated else (1,0,0,1)
    pos_hint: {"x": 0, "y": 0}
    hint_text: '131.159.200.137'
    id: ipTextInput

<PortTextInput>:
    foreground_color: (0,1,0,1) if root.validated else (1,0,0,1)
    pos_hint: {"x": 0, "y": 0}
    hint_text: '1234'

<IPInput>
    orientation: "vertical"
    id: ipTextInput

<PortInput>
    orientation: "vertical"

<ValidateIPLabel>:
    size_hint: (None, None)
    pos_hint: {"x": 0, "y": 1}
    size: (280, 60)
    arrow_pos: "bottom_mid"
    Label:
        id: label
        text: 'Must be an IP'

<ValidatePortLabel>:
    index: 1
    size_hint: (None, None)
    pos_hint: {"x": 0, "y": 1}
    size: (200, 60)
    arrow_pos: "bottom_mid"
    Label:
        id: label
        text: 'Must be a Port'

