# Display Name
# Display Wincount
# Display Time Lived
# Reset Statistics
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<ColoredLabel@Label+BackgroundColor>

<StatisticsMenu>:
    on_pre_enter: (root.refreshstats(""))
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Label:
            id: menunameLabel
            text: 'Statistics Menu'
            size_hint: (1, 0.1)
            color: 1, 0, 0, 1
        Label:
            id: nameLabel
            text: "Name: "
            size_hint: (1, 1)
            color: 1, 0, 0, 1
        BoxLayout:
            orientation: 'horizontal'
            Label:
                id: colorLabel
                text: "Color: "
                size_hint: (1.5, 1)
                color: 1, 0, 0, 1
            ColoredLabel:
                id: showcolorLabel
                size_hint:(1,1)
                background_color: (0, 0, 0, 1)
        Label:
            id: wincountLabel
            text: 'Wincount: (not yet implemented)'
            size_hint: (1, 1)
            color: 1, 0, 0, 1
        Label:
            id: timelivedLabel
            text: 'Time lived: (not yet implemented)'
            size_hint: (1, 1)
            color: 1, 0, 0, 1
        Button:
            id: resetButton
            text: 'Reset Statistics (not yet implemented)'
            background_color: (0.1,0.3,0.7,1)
            size_hint: (1, 1.25)
            #on_release: root.reset_statistics()
        Button:
            id: backtomenuButton
            text: 'Back to Main Menu'
            background_color: (1,0,0,1)
            size_hint: (1, 0.5)
            on_release: root.manager.current = 'mainmenu'