<SearchForLobbiesMenu>:
    on_enter:
        root.getPlayerdata()
        root.getavailableLobbies()
        root.update_list()
    on_leave:
        root.clear_list()

    HeaderLabel:
        text: 'Search for Lobbies Menu'
        pos_hint: {"x": .01, "y": .94}

    ColoredLabel:
        id: explainmenuLabel
        size_hint: ( .98, .08)
        pos_hint: {'x': .01, 'y': .85}
        background_color: (.1,.3,.7,1)
        text: 'Here you can Enter a Lobby'

    BoxLayout:
        orientation: "vertical"
        size_hint: (.98, .57)
        pos_hint: {'x': .01, 'y': .23}
        spacing: 1
        padding: 1

        RecycleView:
            id: lobby_port
            viewclass: 'SelectableLabel'
            SelectableRecycleBoxLayout:
                default_size: None, dp(26)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                multiselect: False
                touch_multiselect: True

    Button:
        id: refreshButton
        size_hint: (.1, .08)
        pos_hint: {"x": .89, "y": .1}
        background_color: (0.1,0.3,0.7,1)
        text: 'Refresh'
        on_release:
            root.clear_list()
            root.getavailableLobbies()
            root.update_list()

    Button:
        id: enterlobbyButton
        size_hint: (.87, .08)
        pos_hint: {"x": .01, "y": .1}
        background_color: (0.1,0.3,0.7,1)
        text: 'Enter Lobby'
        on_release:
            root.enterLobby()
            root.manager.current = 'lobbymenu'

    BackToMenuButton:
        pos_hint: {"x": .01, "y": .01}
